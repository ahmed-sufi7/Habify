{
  "designSystem": {
    "name": "Habit Tracker - Habit Details Screen",
    "version": "1.0.0",
    "description": "Complete design system for the habit details screen of the Flutter habit tracker app",
    
    "colorPalette": {
      "primary": {
        "background": "#FFFFFF",
        "surface": "#F8F9FA",
        "cardBackground": "#FFFFFF"
      },
      "accent": {
        "orange": "#FF6B35",
        "orangeLight": "#FFE4DC",
        "blue": "#E8F2FF",
        "darkBlue": "#2E4A6B",
        "lightBlue": "#B8D4F0"
      },
      "neutral": {
        "black": "#000000",
        "darkGray": "#2C2C2C",
        "mediumGray": "#6B7280",
        "lightGray": "#F3F4F6",
        "white": "#FFFFFF",
        "paleBlue": "#E8F2FF"
      },
      "streak": {
        "completed": "#2C2C2C",
        "incomplete": "#F3F4F6",
        "flame": "#FF6B35"
      }
    },

    "typography": {
      "heading": {
        "primary": {
          "fontSize": 20,
          "fontWeight": 600,
          "color": "#000000",
          "letterSpacing": -0.2
        }
      },
      "body": {
        "large": {
          "fontSize": 16,
          "fontWeight": 500,
          "color": "#2C2C2C",
          "lineHeight": 1.4
        },
        "medium": {
          "fontSize": 14,
          "fontWeight": 400,
          "color": "#6B7280",
          "lineHeight": 1.5
        },
        "small": {
          "fontSize": 12,
          "fontWeight": 400,
          "color": "#6B7280",
          "lineHeight": 1.3
        }
      },
      "label": {
        "category": {
          "fontSize": 12,
          "fontWeight": 500,
          "color": "#6B7280",
          "textTransform": "none"
        },
        "time": {
          "fontSize": 16,
          "fontWeight": 600,
          "color": "#2C2C2C"
        }
      },
      "stats": {
        "number": {
          "fontSize": 18,
          "fontWeight": 600,
          "color": "#FF6B35"
        },
        "percentage": {
          "fontSize": 16,
          "fontWeight": 600,
          "color": "#FF6B35"
        }
      }
    },

    "spacing": {
      "xs": 4,
      "sm": 8,
      "md": 16,
      "lg": 24,
      "xl": 32,
      "xxl": 40
    },

    "borderRadius": {
      "small": 8,
      "medium": 12,
      "large": 16,
      "xlarge": 20,
      "pill": 50
    },

    "shadows": {
      "card": {
        "elevation": 2,
        "color": "#000000",
        "opacity": 0.08,
        "offset": {
          "x": 0,
          "y": 2
        },
        "blurRadius": 8,
        "spreadRadius": 0
      },
      "button": {
        "elevation": 1,
        "color": "#000000",
        "opacity": 0.12,
        "offset": {
          "x": 0,
          "y": 1
        },
        "blurRadius": 3,
        "spreadRadius": 0
      }
    },

    "components": {
      "appBar": {
        "height": 60,
        "backgroundColor": "#FFFFFF",
        "elevation": 0,
        "paddingHorizontal": 16,
        "title": {
          "typography": "heading.primary",
          "alignment": "center"
        },
        "backButton": {
          "size": 24,
          "color": "#2C2C2C",
          "position": "left"
        },
        "moreButton": {
          "size": 24,
          "color": "#2C2C2C",
          "position": "right",
          "icon": "more_vert"
        }
      },

      "heroSection": {
        "paddingHorizontal": 24,
        "paddingVertical": 20,
        "illustration": {
          "width": "100%",
          "height": 200,
          "source": "reading.png",
          "fit": "contain"
        }
      },

      "categoryTags": {
        "container": {
          "paddingHorizontal": 24,
          "marginBottom": 20,
          "flexDirection": "row",
          "gap": 8
        },
        "tag": {
          "paddingHorizontal": 16,
          "paddingVertical": 8,
          "borderRadius": "medium",
          "backgroundColor": "#E8F2FF"
        },
        "primaryTag": {
          "backgroundColor": "#FF6B35",
          "color": "#FFFFFF"
        },
        "secondaryTag": {
          "backgroundColor": "#E8F2FF",
          "color": "#6B7280"
        },
        "typography": "label.category"
      },

      "timeSection": {
        "container": {
          "paddingHorizontal": 24,
          "marginBottom": 24,
          "flexDirection": "row",
          "alignItems": "center",
          "gap": 12
        },
        "icon": {
          "size": 24,
          "color": "#FFFFFF",
          "backgroundColor": "#2C2C2C",
          "borderRadius": "pill",
          "padding": 8
        },
        "content": {
          "timeRange": {
            "typography": "label.time"
          },
          "frequency": {
            "typography": "body.medium",
            "marginTop": 4
          }
        },
        "duration": {
          "container": {
            "flexDirection": "row",
            "alignItems": "center",
            "gap": 4,
            "marginLeft": "auto"
          },
          "icon": {
            "size": 16,
            "color": "#2C2C2C"
          },
          "text": {
            "typography": "body.large"
          }
        }
      },

      "streakCard": {
        "container": {
          "marginHorizontal": 24,
          "marginBottom": 24,
          "padding": 20,
          "backgroundColor": "#E8F2FF",
          "borderRadius": "large",
          "shadow": "card"
        },
        "header": {
          "flexDirection": "row",
          "alignItems": "center",
          "justifyContent": "space-between",
          "marginBottom": 16
        },
        "icon": {
          "size": 24,
          "color": "#FFFFFF",
          "backgroundColor": "#2C2C2C",
          "borderRadius": "pill",
          "padding": 8
        },
        "streakNumber": {
          "flexDirection": "row",
          "alignItems": "center",
          "gap": 4,
          "flame": {
            "size": 20,
            "color": "#FF6B35"
          },
          "number": {
            "typography": "stats.number"
          }
        },
        "calendar": {
          "grid": {
            "columns": 7,
            "gap": 4,
            "marginTop": 12
          },
          "day": {
            "width": 24,
            "height": 24,
            "borderRadius": 4,
            "completed": {
              "backgroundColor": "#2C2C2C"
            },
            "incomplete": {
              "backgroundColor": "#F3F4F6"
            },
            "today": {
              "backgroundColor": "#FF6B35"
            }
          }
        },
        "note": "Use streak card component from home screen with same styling"
      },

      "goalsSection": {
        "container": {
          "paddingHorizontal": 24,
          "marginBottom": 24
        },
        "title": {
          "typography": "body.large",
          "marginBottom": 16,
          "color": "#2C2C2C"
        },
        "goalItem": {
          "container": {
            "flexDirection": "row",
            "alignItems": "center",
            "justifyContent": "space-between",
            "paddingVertical": 12
          },
          "left": {
            "flexDirection": "row",
            "alignItems": "center",
            "gap": 12
          },
          "icon": {
            "size": 24,
            "color": "#FFFFFF",
            "backgroundColor": "#2C2C2C",
            "borderRadius": "pill",
            "padding": 8
          },
          "label": {
            "typography": "body.large"
          },
          "value": {
            "width": 40,
            "height": 40,
            "borderRadius": "pill",
            "border": {
              "width": 2,
              "color": "#F3F4F6"
            },
            "centerContent": true,
            "typography": "stats.number"
          }
        },
        "goals": {
          "habitCompleted": {
            "icon": "check_circle",
            "label": "Habit Completed",
            "value": 68
          },
          "habitMissed": {
            "icon": "cancel",
            "label": "Habit Missed", 
            "value": 24
          },
          "longestStreak": {
            "icon": "local_fire_department",
            "label": "Longest Streak",
            "value": 68
          },
          "completedRate": {
            "icon": "schedule",
            "label": "Completed Rate",
            "value": "86%",
            "isPercentage": true
          }
        }
      },

      "descriptionSection": {
        "container": {
          "paddingHorizontal": 24,
          "marginBottom": 40
        },
        "title": {
          "typography": "body.large",
          "marginBottom": 12,
          "color": "#2C2C2C"
        },
        "content": {
          "typography": "body.medium",
          "lineHeight": 1.6
        }
      }
    },

    "layout": {
      "screen": {
        "backgroundColor": "#FFFFFF",
        "safeArea": true,
        "scrollable": true
      },
      "container": {
        "paddingBottom": 24
      },
      "sections": {
        "spacing": 24,
        "paddingHorizontal": 24
      }
    },

    "icons": {
      "system": {
        "backArrow": "arrow_back_ios",
        "moreVert": "more_vert",
        "schedule": "schedule",
        "today": "today",
        "checkCircle": "check_circle_outline",
        "cancel": "cancel_outlined",
        "flame": "local_fire_department",
        "clock": "access_time"
      },
      "sizes": {
        "small": 16,
        "medium": 20,
        "large": 24,
        "xlarge": 32
      }
    },

    "animations": {
      "transitions": {
        "duration": 300,
        "curve": "ease_in_out"
      },
      "streakFlame": {
        "duration": 1000,
        "type": "pulse",
        "repeat": true
      }
    },

    "accessibility": {
      "minTouchTarget": 44,
      "semanticLabels": {
        "backButton": "Go back",
        "moreOptions": "More options",
        "streakCount": "Current streak: {count} days",
        "goalProgress": "{label}: {value}",
        "habitDescription": "Habit description"
      }
    },

    "responsive": {
      "breakpoints": {
        "mobile": 375,
        "tablet": 768
      },
      "scalingFactors": {
        "typography": 1.0,
        "spacing": 1.0,
        "components": 1.0
      }
    },

    "implementation": {
      "flutter": {
        "widgets": {
          "appBar": "AppBar with custom styling",
          "heroSection": "Container with Image.asset",
          "categoryTags": "Row of Container widgets",
          "timeSection": "Row with Icon and Text widgets",
          "streakCard": "Custom streak widget from home screen",
          "goalsSection": "Column of goal item widgets",
          "descriptionSection": "Container with Text widget"
        },
        "packages": {
          "required": [
            "flutter/material.dart"
          ],
          "optional": [
            "flutter_svg: for custom icons"
          ]
        }
      }
    },

    "usage": {
      "instructions": [
        "Use the heroSection illustration from reading.png asset",
        "Categories are dynamic based on habit creation (Knowledge, Do First shown)",
        "Time section shows habit schedule (08.00 - 08.10 PM Everday, 15min)",
        "Streak card should reuse the component from home screen",
        "Goals section displays statistics with circular progress indicators",
        "Description uses Lorem Ipsum placeholder text",
        "All sections maintain consistent 24px horizontal padding",
        "Vertical spacing between sections is 24px"
      ],
      "variations": {
        "categories": [
          {"name": "Knowledge", "style": "secondary"},
          {"name": "Do First", "style": "primary"},
          {"name": "Health", "style": "secondary"},
          {"name": "Personal", "style": "secondary"}
        ],
        "timeFormats": [
          "HH.MM - HH.MM AM/PM",
          "Everday/Weekdays/Weekends",
          "Duration in minutes"
        ]
      }
    }
  }
}