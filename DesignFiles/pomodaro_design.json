{
  "designSystem": {
    "name": "Pomodoro Flutter App Design System",
    "version": "1.0.0",
    "description": "Comprehensive design system for a minimalist Pomodoro timer application",
    
    "colorPalette": {
      "primary": {
        "background": "#FFFFFF",
        "surface": "#F8F9FA",
        "text": "#1A1A1A",
        "textSecondary": "#666666",
        "textPlaceholder": "#999999"
      },
      "accent": {
        "orange": "#FF6B35",
        "orangeLight": "#FFE5DC",
        "purple": "#E8E0FF",
        "lightBlue": "#D4EDDA",
        "darkElements": "#2C2C2C"
      },
      "states": {
        "completed": "#4CAF50",
        "pending": "#E0E0E0",
        "active": "#FF6B35"
      }
    },

    "typography": {
      "fontFamily": "SF Pro Display, -apple-system, BlinkMacSystemFont, sans-serif",
      "scales": {
        "display": {
          "fontSize": 48,
          "fontWeight": 700,
          "lineHeight": 1.1,
          "letterSpacing": -0.02
        },
        "h1": {
          "fontSize": 24,
          "fontWeight": 600,
          "lineHeight": 1.2,
          "letterSpacing": -0.01
        },
        "h2": {
          "fontSize": 20,
          "fontWeight": 600,
          "lineHeight": 1.25,
          "letterSpacing": 0
        },
        "body": {
          "fontSize": 16,
          "fontWeight": 400,
          "lineHeight": 1.4,
          "letterSpacing": 0
        },
        "bodyMedium": {
          "fontSize": 16,
          "fontWeight": 500,
          "lineHeight": 1.4,
          "letterSpacing": 0
        },
        "caption": {
          "fontSize": 14,
          "fontWeight": 400,
          "lineHeight": 1.3,
          "letterSpacing": 0.01
        }
      }
    },

    "spacing": {
      "unit": 4,
      "scale": {
        "xs": 8,
        "sm": 12,
        "md": 16,
        "lg": 24,
        "xl": 32,
        "xxl": 48,
        "xxxl": 64
      },
      "component": {
        "screenPadding": 24,
        "sectionSpacing": 32,
        "itemSpacing": 16,
        "listItemSpacing": 12
      }
    },

    "borderRadius": {
      "none": 0,
      "sm": 8,
      "md": 12,
      "lg": 16,
      "xl": 24,
      "full": 9999
    },

    "shadows": {
      "none": "none",
      "sm": "0px 1px 3px rgba(0, 0, 0, 0.05)",
      "md": "0px 4px 12px rgba(0, 0, 0, 0.08)",
      "lg": "0px 8px 24px rgba(0, 0, 0, 0.12)"
    },

    "components": {
      "appBar": {
        "height": 56,
        "backgroundColor": "#FFFFFF",
        "elevation": 0,
        "titleStyle": {
          "fontSize": 20,
          "fontWeight": 600,
          "color": "#1A1A1A",
          "letterSpacing": -0.01
        },
        "backButton": {
          "size": 24,
          "color": "#1A1A1A",
          "padding": 16
        }
      },

      "textInput": {
        "default": {
          "height": 56,
          "borderRadius": 28,
          "borderWidth": 2,
          "borderColor": "#1A1A1A",
          "backgroundColor": "#FFFFFF",
          "paddingHorizontal": 20,
          "paddingVertical": 16,
          "fontSize": 16,
          "fontWeight": 400,
          "textColor": "#1A1A1A",
          "placeholderColor": "#999999"
        },
        "focused": {
          "borderColor": "#FF6B35",
          "shadowColor": "rgba(255, 107, 53, 0.1)",
          "shadowOffset": { "width": 0, "height": 0 },
          "shadowRadius": 8,
          "shadowOpacity": 1
        }
      },

      "dropdown": {
        "container": {
          "height": 56,
          "borderRadius": 28,
          "backgroundColor": "#E8E0FF",
          "paddingHorizontal": 20,
          "paddingVertical": 16,
          "marginBottom": 16
        },
        "text": {
          "fontSize": 16,
          "fontWeight": 500,
          "color": "#1A1A1A"
        },
        "icon": {
          "size": 20,
          "color": "#1A1A1A",
          "position": "right"
        },
        "overlay": {
          "backgroundColor": "rgba(0, 0, 0, 0.5)",
          "backdropFilter": "blur(4px)"
        },
        "menu": {
          "backgroundColor": "#FFFFFF",
          "borderRadius": 12,
          "elevation": 8,
          "shadowColor": "rgba(0, 0, 0, 0.15)",
          "shadowOffset": { "width": 0, "height": 4 },
          "shadowRadius": 12,
          "shadowOpacity": 1,
          "maxHeight": 240,
          "marginHorizontal": 24
        },
        "menuItem": {
          "height": 48,
          "paddingHorizontal": 16,
          "paddingVertical": 12,
          "borderBottomWidth": 1,
          "borderBottomColor": "#F0F0F0"
        },
        "menuItemText": {
          "fontSize": 16,
          "fontWeight": 400,
          "color": "#1A1A1A"
        },
        "menuItemSelected": {
          "backgroundColor": "#F8F9FA",
          "fontWeight": 500
        }
      },

      "button": {
        "primary": {
          "height": 56,
          "borderRadius": 28,
          "backgroundColor": "#2C2C2C",
          "paddingHorizontal": 32,
          "paddingVertical": 16,
          "shadowColor": "rgba(44, 44, 44, 0.15)",
          "shadowOffset": { "width": 0, "height": 2 },
          "shadowRadius": 8,
          "shadowOpacity": 1,
          "textStyle": {
            "fontSize": 18,
            "fontWeight": 600,
            "color": "#FFFFFF",
            "letterSpacing": 0
          }
        },
        "controlButton": {
          "width": 80,
          "height": 80,
          "borderRadius": 24,
          "backgroundColor": "#E8E0FF",
          "justifyContent": "center",
          "alignItems": "center",
          "shadowColor": "rgba(0, 0, 0, 0.05)",
          "shadowOffset": { "width": 0, "height": 2 },
          "shadowRadius": 4,
          "shadowOpacity": 1
        },
        "floatingAction": {
          "width": 80,
          "height": 80,
          "borderRadius": 24,
          "backgroundColor": "#2C2C2C",
          "justifyContent": "center",
          "alignItems": "center",
          "shadowColor": "rgba(44, 44, 44, 0.2)",
          "shadowOffset": { "width": 0, "height": 4 },
          "shadowRadius": 12,
          "shadowOpacity": 1
        }
      },

      "circularProgress": {
        "size": 240,
        "strokeWidth": 8,
        "backgroundColor": "transparent",
        "progressColor": "#FF6B35",
        "backgroundRingColor": "#F0F0F0",
        "centerContent": {
          "fontSize": 48,
          "fontWeight": 700,
          "color": "#1A1A1A",
          "letterSpacing": -0.02
        }
      },

      "listItem": {
        "container": {
          "height": 64,
          "paddingHorizontal": 0,
          "paddingVertical": 8,
          "backgroundColor": "transparent",
          "borderRadius": 0
        },
        "content": {
          "flexDirection": "row",
          "alignItems": "center",
          "gap": 16
        },
        "icon": {
          "width": 40,
          "height": 40,
          "borderRadius": 20,
          "backgroundColor": "#2C2C2C",
          "justifyContent": "center",
          "alignItems": "center"
        },
        "iconSize": 20,
        "iconColor": "#FFFFFF",
        "title": {
          "fontSize": 16,
          "fontWeight": 500,
          "color": "#1A1A1A",
          "flex": 1
        },
        "trailing": {
          "fontSize": 16,
          "fontWeight": 400,
          "color": "#666666"
        }
      },

      "sessionItem": {
        "container": {
          "height": 56,
          "paddingHorizontal": 0,
          "paddingVertical": 8,
          "backgroundColor": "transparent",
          "flexDirection": "row",
          "alignItems": "center",
          "justifyContent": "space-between"
        },
        "content": {
          "flexDirection": "row",
          "alignItems": "center",
          "gap": 16
        },
        "icon": {
          "width": 40,
          "height": 40,
          "borderRadius": 20,
          "backgroundColor": "#2C2C2C",
          "justifyContent": "center",
          "alignItems": "center"
        },
        "title": {
          "fontSize": 16,
          "fontWeight": 500,
          "color": "#1A1A1A"
        },
        "checkbox": {
          "width": 24,
          "height": 24,
          "borderRadius": 12,
          "borderWidth": 2,
          "borderColor": "#E0E0E0",
          "backgroundColor": "#FFFFFF"
        },
        "checkboxCompleted": {
          "backgroundColor": "#4CAF50",
          "borderColor": "#4CAF50"
        },
        "checkmark": {
          "size": 14,
          "color": "#FFFFFF"
        }
      },

      "sectionHeader": {
        "marginTop": 32,
        "marginBottom": 16,
        "fontSize": 20,
        "fontWeight": 600,
        "color": "#1A1A1A",
        "letterSpacing": 0
      },

      "label": {
        "marginBottom": 8,
        "fontSize": 16,
        "fontWeight": 500,
        "color": "#1A1A1A",
        "letterSpacing": 0
      }
    },

    "layout": {
      "screen": {
        "backgroundColor": "#FFFFFF",
        "paddingHorizontal": 24,
        "paddingTop": 0,
        "paddingBottom": 24
      },
      "container": {
        "flex": 1,
        "backgroundColor": "#FFFFFF"
      },
      "content": {
        "paddingTop": 24,
        "gap": 24
      },
      "bottomActions": {
        "paddingTop": 32,
        "paddingBottom": 24,
        "gap": 16,
        "flexDirection": "row",
        "justifyContent": "center",
        "alignItems": "center"
      }
    },

    "animations": {
      "duration": {
        "fast": 200,
        "medium": 300,
        "slow": 500
      },
      "easing": {
        "easeInOut": "cubic-bezier(0.4, 0, 0.2, 1)",
        "easeOut": "cubic-bezier(0, 0, 0.2, 1)",
        "easeIn": "cubic-bezier(0.4, 0, 1, 1)"
      },
      "transitions": {
        "buttonPress": {
          "duration": 150,
          "scale": 0.95,
          "opacity": 0.8
        },
        "dropdownOpen": {
          "duration": 300,
          "scale": { "from": 0.95, "to": 1 },
          "opacity": { "from": 0, "to": 1 }
        },
        "progressRing": {
          "duration": 1000,
          "easing": "linear"
        }
      }
    },

    "variants": {
      "dropdown": {
        "purple": {
          "backgroundColor": "#E8E0FF"
        },
        "lightBlue": {
          "backgroundColor": "#D4EDDA"
        },
        "orange": {
          "backgroundColor": "#FFE5DC"
        }
      },
      "controlButton": {
        "play": {
          "backgroundColor": "#E8E0FF",
          "iconColor": "#2C2C2C"
        },
        "pause": {
          "backgroundColor": "#D4EDDA",
          "iconColor": "#2C2C2C"
        },
        "complete": {
          "backgroundColor": "#2C2C2C",
          "iconColor": "#FFFFFF"
        }
      }
    },

    "accessibility": {
      "minTouchTarget": 44,
      "colorContrast": {
        "textOnBackground": 4.5,
        "textOnSurface": 4.5,
        "textOnAccent": 4.5
      },
      "focusRing": {
        "width": 2,
        "color": "#FF6B35",
        "offset": 2
      }
    },

    "responsive": {
      "breakpoints": {
        "mobile": 375,
        "tablet": 768,
        "desktop": 1024
      },
      "scaling": {
        "mobile": 1,
        "tablet": 1.2,
        "desktop": 1.4
      }
    }
  }
}