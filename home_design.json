{
  "designSystem": {
    "appName": "Habit Tracker Home Screen Design System",
    "platform": "Flutter",
    "version": "1.0.0",
    
    "colorPalette": {
      "primary": {
        "orange": "#FF6B35",
        "orangeLight": "#FFB399",
        "green": "#4CAF50",
        "greenLight": "#66BB6A"
      },
      "neutral": {
        "black": "#000000",
        "darkGray": "#2C2C2C",
        "mediumGray": "#757575",
        "lightGray": "#E0E0E0",
        "paleGray": "#F5F5F5",
        "white": "#FFFFFF"
      },
      "background": {
        "primary": "#FFFFFF",
        "habitCardBlue": "#E3F2FD",
        "habitCardTeal": "#B2DFDB",
        "habitCardYellow": "#FFF9C4",
        "streakCard": "#FFE8E0",
        "completedHabit": "#E8F5E8"
      },
      "status": {
        "completed": "#4CAF50",
        "uncompleted": "#757575",
        "streak": "#FF6B35"
      }
    },

    "typography": {
      "header": {
        "greeting": {
          "fontSize": 16,
          "fontWeight": "w400",
          "color": "#757575",
          "letterSpacing": 0.5
        },
        "userName": {
          "fontSize": 24,
          "fontWeight": "w600",
          "color": "#000000",
          "letterSpacing": 0.3
        }
      },
      "streakCard": {
        "title": {
          "fontSize": 20,
          "fontWeight": "w600",
          "color": "#000000"
        },
        "subtitle": {
          "fontSize": 14,
          "fontWeight": "w400",
          "color": "#FF6B35"
        },
        "streakNumber": {
          "fontSize": 48,
          "fontWeight": "w700",
          "color": "#FF6B35"
        }
      },
      "habitCard": {
        "title": {
          "fontSize": 18,
          "fontWeight": "w600",
          "color": "#000000"
        },
        "timeIndicator": {
          "fontSize": 12,
          "fontWeight": "w500",
          "color": "#FF6B35"
        },
        "streakCount": {
          "fontSize": 16,
          "fontWeight": "w600",
          "color": "#FF6B35"
        }
      },
      "dateTimeline": {
        "dateNumber": {
          "fontSize": 16,
          "fontWeight": "w600",
          "color": "#FFFFFF"
        },
        "dayName": {
          "fontSize": 12,
          "fontWeight": "w400",
          "color": "#FFFFFF"
        },
        "inactiveDateNumber": {
          "fontSize": 16,
          "fontWeight": "w600",
          "color": "#000000"
        },
        "inactiveDayName": {
          "fontSize": 12,
          "fontWeight": "w400",
          "color": "#757575"
        }
      }
    },

    "spacing": {
      "xxs": 2,
      "xs": 4,
      "sm": 8,
      "md": 12,
      "lg": 16,
      "xl": 20,
      "xxl": 24,
      "xxxl": 32
    },

    "borderRadius": {
      "xs": 4,
      "sm": 8,
      "md": 12,
      "lg": 16,
      "xl": 20,
      "xxl": 24,
      "circle": 50
    },

    "layout": {
      "screen": {
        "paddingHorizontal": 16,
        "paddingVertical": 20,
        "backgroundColor": "#FFFFFF"
      },
      "header": {
        "paddingHorizontal": 16,
        "paddingVertical": 20,
        "flexDirection": "row",
        "justifyContent": "space-between",
        "alignItems": "center"
      },
      "streakSection": {
        "marginVertical": 16,
        "height": 120
      },
      "dateTimeline": {
        "marginVertical": 16,
        "height": 80,
        "paddingHorizontal": 8
      },
      "habitCardsSection": {
        "flex": 1,
        "paddingHorizontal": 16,
        "marginBottom": 100
      },
      "bottomNavigation": {
        "position": "absolute",
        "bottom": 0,
        "left": 0,
        "right": 0,
        "height": 80,
        "backgroundColor": "#2C2C2C",
        "flexDirection": "row",
        "justifyContent": "center",
        "alignItems": "center",
        "borderRadius": 24
      }
    },

    "components": {
      "userAvatar": {
        "width": 48,
        "height": 48,
        "borderRadius": 24,
        "backgroundColor": "#E0E0E0"
      },
      
      "notificationButton": {
        "width": 40,
        "height": 40,
        "borderRadius": 20,
        "backgroundColor": "transparent",
        "borderWidth": 1,
        "borderColor": "#E0E0E0",
        "justifyContent": "center",
        "alignItems": "center"
      },

      "streakCard": {
        "width": 280,
        "height": 100,
        "backgroundColor": "#FFE8E0",
        "borderRadius": 16,
        "padding": 20,
        "marginHorizontal": 8,
        "flexDirection": "row",
        "alignItems": "center",
        "justifyContent": "space-between"
      },

      "habitCompleteCard": {
        "width": 200,
        "height": 80,
        "backgroundColor": "#E8F5E8",
        "borderRadius": 16,
        "padding": 16,
        "marginHorizontal": 8,
        "flexDirection": "row",
        "alignItems": "center",
        "justifyContent": "space-between"
      },

      "dateTimelineItem": {
        "active": {
          "width": 60,
          "height": 60,
          "backgroundColor": "#000000",
          "borderRadius": 30,
          "justifyContent": "center",
          "alignItems": "center",
          "marginHorizontal": 4
        },
        "inactive": {
          "width": 60,
          "height": 60,
          "backgroundColor": "transparent",
          "borderWidth": 1,
          "borderColor": "#E0E0E0",
          "borderRadius": 30,
          "justifyContent": "center",
          "alignItems": "center",
          "marginHorizontal": 4
        },
        "completed": {
          "width": 60,
          "height": 60,
          "backgroundColor": "#FF6B35",
          "borderRadius": 30,
          "justifyContent": "center",
          "alignItems": "center",
          "marginHorizontal": 4
        }
      },

      "habitCard": {
        "container": {
          "width": "100%",
          "minHeight": 280,
          "borderRadius": 20,
          "padding": 20,
          "marginVertical": 8,
          "position": "relative"
        },
        "variants": {
          "blue": {
            "backgroundColor": "#E3F2FD"
          },
          "teal": {
            "backgroundColor": "#B2DFDB"
          },
          "yellow": {
            "backgroundColor": "#FFF9C4"
          }
        },
        "header": {
          "flexDirection": "row",
          "alignItems": "center",
          "marginBottom": 16
        },
        "icon": {
          "width": 32,
          "height": 32,
          "backgroundColor": "#000000",
          "borderRadius": 16,
          "marginRight": 12,
          "justifyContent": "center",
          "alignItems": "center"
        },
        "streakIndicator": {
          "flexDirection": "row",
          "alignItems": "center",
          "position": "absolute",
          "top": 20,
          "right": 20
        },
        "flameIcon": {
          "width": 16,
          "height": 16,
          "marginLeft": 4
        }
      },

      "progressGrid": {
        "container": {
          "marginVertical": 16,
          "flexDirection": "row",
          "flexWrap": "wrap",
          "justifyContent": "space-between"
        },
        "dot": {
          "width": 12,
          "height": 12,
          "borderRadius": 6,
          "marginBottom": 4,
          "marginHorizontal": 2
        },
        "dotStates": {
          "completed": {
            "backgroundColor": "#000000"
          },
          "missed": {
            "backgroundColor": "#757575"
          },
          "future": {
            "backgroundColor": "#E0E0E0"
          }
        }
      },

      "timeIndicator": {
        "container": {
          "flexDirection": "row",
          "alignItems": "center",
          "marginTop": 8,
          "marginBottom": 16
        },
        "text": {
          "marginRight": 8
        }
      },

      "toggleButton": {
        "completed": {
          "width": 100,
          "height": 32,
          "backgroundColor": "#4CAF50",
          "borderRadius": 16,
          "flexDirection": "row",
          "alignItems": "center",
          "justifyContent": "center",
          "position": "absolute",
          "bottom": 20,
          "right": 20
        },
        "uncompleted": {
          "width": 100,
          "height": 32,
          "backgroundColor": "#757575",
          "borderRadius": 16,
          "flexDirection": "row",
          "alignItems": "center",
          "justifyContent": "center",
          "position": "absolute",
          "bottom": 20,
          "right": 20
        },
        "text": {
          "fontSize": 12,
          "fontWeight": "w600",
          "color": "#FFFFFF",
          "marginLeft": 4
        }
      },

      "bottomNavigation": {
        "container": {
          "position": "absolute",
          "bottom": 34,
          "left": 16,
          "right": 16,
          "height": 60,
          "backgroundColor": "#2C2C2C",
          "borderRadius": 30,
          "flexDirection": "row",
          "justifyContent": "space-around",
          "alignItems": "center",
          "paddingHorizontal": 20
        },
        "homeButton": {
          "width": 32,
          "height": 32,
          "justifyContent": "center",
          "alignItems": "center"
        },
        "addButton": {
          "width": 48,
          "height": 48,
          "backgroundColor": "#FFFFFF",
          "borderRadius": 24,
          "justifyContent": "center",
          "alignItems": "center"
        },
        "statsButton": {
          "width": 32,
          "height": 32,
          "justifyContent": "center",
          "alignItems": "center"
        }
      }
    },

    "icons": {
      "sizes": {
        "xs": 12,
        "sm": 16,
        "md": 20,
        "lg": 24,
        "xl": 32
      },
      "types": {
        "notification": "bell",
        "book": "book-open",
        "code": "code",
        "flame": "flame",
        "checkmark": "check",
        "home": "home",
        "plus": "plus",
        "bar-chart": "bar-chart-2"
      }
    },

    "animations": {
      "cardEntry": {
        "type": "fadeInUp",
        "duration": 300,
        "delay": 100
      },
      "toggleButton": {
        "type": "scale",
        "duration": 200
      },
      "streakCelebration": {
        "type": "bounceIn",
        "duration": 500
      },
      "habitComplete": {
        "type": "pulse",
        "duration": 300
      }
    },

    "shadows": {
      "card": {
        "shadowColor": "#000000",
        "shadowOffset": {
          "width": 0,
          "height": 2
        },
        "shadowOpacity": 0.1,
        "shadowRadius": 8,
        "elevation": 4
      },
      "bottomNav": {
        "shadowColor": "#000000",
        "shadowOffset": {
          "width": 0,
          "height": -2
        },
        "shadowOpacity": 0.15,
        "shadowRadius": 12,
        "elevation": 8
      }
    },

    "states": {
      "habitCard": {
        "default": {
          "opacity": 1,
          "transform": "scale(1)"
        },
        "pressed": {
          "opacity": 0.8,
          "transform": "scale(0.98)"
        },
        "completed": {
          "opacity": 1,
          "transform": "scale(1)",
          "overlayVisible": true
        }
      },
      "toggleButton": {
        "completed": {
          "backgroundColor": "#4CAF50",
          "icon": "check"
        },
        "uncompleted": {
          "backgroundColor": "#757575",
          "icon": "check"
        }
      }
    },

    "responsive": {
      "breakpoints": {
        "small": 360,
        "medium": 390,
        "large": 414,
        "xlarge": 428
      },
      "adaptiveSpacing": {
        "small": {
          "cardPadding": 16,
          "sectionMargin": 12
        },
        "medium": {
          "cardPadding": 20,
          "sectionMargin": 16
        },
        "large": {
          "cardPadding": 24,
          "sectionMargin": 20
        }
      }
    },

    "accessibility": {
      "minimumTapTargetSize": 44,
      "colorContrast": {
        "text": 4.5,
        "largeText": 3.0
      },
      "semanticLabels": {
        "habitCompleteButton": "Mark habit as complete",
        "addHabitButton": "Add new habit",
        "streakCounter": "Current streak count",
        "progressGrid": "Habit completion progress"
      }
    }
  }
}