{
  "designSystem": {
    "name": "Habify Notification Design System",
    "version": "1.0.0",
    "description": "Comprehensive design system for Flutter notification screen with pixel-perfect specifications",
    
    "colors": {
      "primary": {
        "background": "#F8F9FA",
        "surface": "#FFFFFF",
        "text": {
          "primary": "#1A1A1A",
          "secondary": "#666666",
          "accent": "#FF6B35"
        }
      },
      "notifications": {
        "blue": {
          "background": "#E8E5FF",
          "gradient": "linear-gradient(135deg, #E8E5FF 0%, #D4EDFF 100%)"
        },
        "purple": {
          "background": "#F4E8FF",
          "gradient": "linear-gradient(135deg, #F4E8FF 0%, #E8E5FF 100%)"
        },
        "cyan": {
          "background": "#E0F7FF",
          "gradient": "linear-gradient(135deg, #E0F7FF 0%, #C7F0FF 100%)"
        }
      }
    },
    
    "typography": {
      "appBar": {
        "title": {
          "fontFamily": "SF Pro Display",
          "fontSize": 18,
          "fontWeight": "600",
          "color": "#1A1A1A",
          "letterSpacing": -0.2
        }
      },
      "notification": {
        "title": {
          "fontFamily": "SF Pro Text",
          "fontSize": 16,
          "fontWeight": "600",
          "color": "#1A1A1A",
          "letterSpacing": -0.1
        },
        "subtitle": {
          "fontFamily": "SF Pro Text",
          "fontSize": 14,
          "fontWeight": "400",
          "color": "#666666",
          "letterSpacing": -0.08
        },
        "time": {
          "fontFamily": "SF Pro Text",
          "fontSize": 13,
          "fontWeight": "500",
          "color": "#666666",
          "letterSpacing": 0
        },
        "accent": {
          "fontFamily": "SF Pro Text",
          "fontSize": 14,
          "fontWeight": "500",
          "color": "#FF6B35",
          "letterSpacing": -0.08
        }
      }
    },
    
    "spacing": {
      "screen": {
        "paddingHorizontal": 16,
        "paddingTop": 8,
        "paddingBottom": 24
      },
      "notification": {
        "marginBottom": 12,
        "paddingHorizontal": 16,
        "paddingVertical": 16,
        "iconMarginRight": 12,
        "contentSpacing": 4,
        "timeMarginTop": 2
      },
      "appBar": {
        "height": 56,
        "paddingHorizontal": 16,
        "iconSize": 24,
        "titleMarginLeft": 24
      }
    },
    
    "borderRadius": {
      "notification": 20,
      "icon": 20,
      "appBarIcon": 12
    },
    
    "shadows": {
      "notification": {
        "elevation": 2,
        "shadowColor": "#000000",
        "shadowOffset": {
          "width": 0,
          "height": 2
        },
        "shadowOpacity": 0.08,
        "shadowRadius": 8,
        "androidElevation": 3
      }
    },
    
    "components": {
      "appBar": {
        "structure": {
          "height": 56,
          "backgroundColor": "#F8F9FA",
          "elevation": 0,
          "centerTitle": true,
          "leading": {
            "type": "IconButton",
            "icon": "arrow_back_ios",
            "size": 20,
            "color": "#1A1A1A",
            "padding": 12
          },
          "title": {
            "text": "Notification",
            "style": "appBar.title"
          },
          "actions": [
            {
              "type": "IconButton",
              "icon": "more_vert",
              "size": 20,
              "color": "#1A1A1A",
              "padding": 12
            }
          ]
        }
      },
      
      "notificationCard": {
        "structure": {
          "container": {
            "margin": {
              "horizontal": 0,
              "bottom": 12
            },
            "padding": {
              "horizontal": 16,
              "vertical": 16
            },
            "decoration": {
              "borderRadius": 20,
              "backgroundGradient": "varies by type",
              "shadow": "notification"
            }
          },
          "layout": {
            "type": "Row",
            "crossAxisAlignment": "start",
            "children": [
              {
                "type": "iconContainer",
                "specifications": {
                  "width": 40,
                  "height": 40,
                  "decoration": {
                    "color": "#000000",
                    "borderRadius": 20
                  },
                  "child": {
                    "type": "Icon",
                    "icon": "notifications",
                    "color": "#FFFFFF",
                    "size": 20
                  }
                }
              },
              {
                "type": "SizedBox",
                "width": 12
              },
              {
                "type": "contentContainer",
                "specifications": {
                  "flex": 1,
                  "child": {
                    "type": "Column",
                    "crossAxisAlignment": "start",
                    "children": [
                      {
                        "type": "titleRow",
                        "layout": "Row with MainAxisAlignment.spaceBetween",
                        "children": [
                          {
                            "type": "Text",
                            "text": "Habify Reminder",
                            "style": "notification.title"
                          },
                          {
                            "type": "Text",
                            "text": "07.30 AM",
                            "style": "notification.time"
                          }
                        ]
                      },
                      {
                        "type": "SizedBox",
                        "height": 4
                      },
                      {
                        "type": "subtitle",
                        "variants": [
                          {
                            "type": "accent",
                            "text": "10 minutes left to start learning coding!",
                            "style": "notification.accent"
                          },
                          {
                            "type": "normal",
                            "text": "Time for you to Learn Programming",
                            "style": "notification.subtitle"
                          }
                        ]
                      }
                    ]
                  }
                }
              }
            ]
          }
        },
        
        "variants": {
          "blue": {
            "backgroundColor": "#E8E5FF",
            "gradient": "linear-gradient(135deg, #E8E5FF 0%, #D4EDFF 100%)"
          },
          "purple": {
            "backgroundColor": "#F4E8FF",
            "gradient": "linear-gradient(135deg, #F4E8FF 0%, #E8E5FF 100%)"
          },
          "cyan": {
            "backgroundColor": "#E0F7FF",
            "gradient": "linear-gradient(135deg, #E0F7FF 0%, #C7F0FF 100%)"
          }
        }
      }
    },
    
    "layout": {
      "screen": {
        "structure": {
          "type": "Scaffold",
          "backgroundColor": "#F8F9FA",
          "appBar": "appBar component",
          "body": {
            "type": "SingleChildScrollView",
            "padding": {
              "horizontal": 16,
              "top": 8,
              "bottom": 24
            },
            "child": {
              "type": "Column",
              "children": [
                {
                  "type": "notificationCard",
                  "variant": "blue",
                  "content": {
                    "title": "Habify Reminder",
                    "subtitle": "10 minutes left to start learning coding!",
                    "subtitleType": "accent",
                    "time": "07.30 AM"
                  }
                },
                {
                  "type": "notificationCard",
                  "variant": "purple",
                  "content": {
                    "title": "Habify Reminder",
                    "subtitle": "Time for you to Learn Programming",
                    "subtitleType": "normal",
                    "time": "07.30 AM"
                  }
                },
                {
                  "type": "notificationCard",
                  "variant": "cyan",
                  "content": {
                    "title": "Habify Reminder",
                    "subtitle": "Time for you to Learn Programming",
                    "subtitleType": "normal",
                    "time": "07.30 AM"
                  }
                }
              ]
            }
          }
        }
      }
    },
    
    "animations": {
      "pageTransition": {
        "type": "slideFromRight",
        "duration": "300ms",
        "curve": "easeInOut"
      },
      "cardTap": {
        "type": "scale",
        "scale": 0.98,
        "duration": "150ms",
        "curve": "easeInOut"
      }
    },
    
    "interactions": {
      "notificationCard": {
        "onTap": {
          "animation": "cardTap",
          "action": "navigateToDetail",
          "hapticFeedback": "light"
        }
      },
      "backButton": {
        "onTap": {
          "action": "pop",
          "hapticFeedback": "light"
        }
      },
      "moreButton": {
        "onTap": {
          "action": "showBottomSheet",
          "hapticFeedback": "light"
        }
      }
    },
    
    "flutterImplementation": {
      "dependencies": {
        "flutter": ">=3.0.0",
        "requiredPackages": []
      },
      
      "codeStructure": {
        "widgets": [
          "NotificationScreen (StatefulWidget)",
          "CustomAppBar (PreferredSizeWidget)",
          "NotificationCard (StatelessWidget)",
          "NotificationIcon (StatelessWidget)"
        ],
        
        "files": [
          "notification_screen.dart",
          "notification_card.dart",
          "app_colors.dart",
          "app_text_styles.dart",
          "app_spacing.dart"
        ]
      },
      
      "keyProperties": {
        "Container": {
          "margin": "EdgeInsets values from spacing.notification",
          "padding": "EdgeInsets values from spacing.notification",
          "decoration": "BoxDecoration with gradient and borderRadius"
        },
        "Text": {
          "style": "TextStyle with typography specifications",
          "overflow": "TextOverflow.ellipsis for long content"
        },
        "Row": {
          "mainAxisAlignment": "MainAxisAlignment.spaceBetween for title row",
          "crossAxisAlignment": "CrossAxisAlignment.start"
        },
        "Column": {
          "crossAxisAlignment": "CrossAxisAlignment.start",
          "mainAxisSize": "MainAxisSize.min"
        }
      }
    },
    
    "accessibility": {
      "semantics": {
        "notificationCard": {
          "label": "Notification from Habify Reminder",
          "hint": "Tap to view details",
          "value": "Content and time information"
        },
        "backButton": {
          "label": "Back",
          "hint": "Return to previous screen"
        },
        "moreButton": {
          "label": "More options",
          "hint": "Show additional actions"
        }
      }
    },
    
    "responsiveBreakpoints": {
      "mobile": {
        "minWidth": 0,
        "maxWidth": 599,
        "adaptations": "Default implementation"
      },
      "tablet": {
        "minWidth": 600,
        "maxWidth": 1199,
        "adaptations": {
          "notification.paddingHorizontal": 24,
          "screen.paddingHorizontal": 32
        }
      },
      "desktop": {
        "minWidth": 1200,
        "adaptations": {
          "maxWidth": 800,
          "centerContent": true
        }
      }
    }
  }
}