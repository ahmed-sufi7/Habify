{
  "designSystem": {
    "appName": "Habit Tracker App",
    "version": "1.0",
    "designLanguage": "Modern Minimalist with Gamification Elements",
    
    "colorPalette": {
      "primary": {
        "orange": "#FF6B35",
        "orangeLight": "#FF8A65",
        "orangeDark": "#E65100"
      },
      "neutral": {
        "white": "#FFFFFF",
        "black": "#000000",
        "darkGray": "#2C2C2C",
        "mediumGray": "#666666",
        "lightGray": "#E0E0E0",
        "backgroundGray": "#F5F5F5"
      },
      "accent": {
        "green": "#4CAF50",
        "greenLight": "#C8E6C9",
        "blue": "#E3F2FD",
        "purple": "#E1BEE7",
        "yellow": "#FFF9C4"
      },
      "status": {
        "completed": "#4CAF50",
        "uncompleted": "#666666",
        "streak": "#FF6B35"
      }
    },

    "typography": {
      "fontFamily": "System Default (San Francisco/Roboto)",
      "hierarchy": {
        "greeting": {
          "fontSize": 16,
          "fontWeight": "400",
          "color": "#666666",
          "letterSpacing": 0
        },
        "username": {
          "fontSize": 20,
          "fontWeight": "600",
          "color": "#000000",
          "letterSpacing": -0.5
        },
        "streakTitle": {
          "fontSize": 24,
          "fontWeight": "700",
          "color": "#000000",
          "letterSpacing": -0.5
        },
        "streakNumber": {
          "fontSize": 32,
          "fontWeight": "800",
          "color": "#FF6B35",
          "letterSpacing": -1
        },
        "streakSubtext": {
          "fontSize": 14,
          "fontWeight": "400",
          "color": "#FF6B35",
          "letterSpacing": 0.25
        },
        "habitTitle": {
          "fontSize": 18,
          "fontWeight": "600",
          "color": "#000000",
          "letterSpacing": -0.25
        },
        "habitStreak": {
          "fontSize": 16,
          "fontWeight": "700",
          "color": "#FF6B35",
          "letterSpacing": 0
        },
        "timeIndicator": {
          "fontSize": 14,
          "fontWeight": "500",
          "color": "#FF6B35",
          "letterSpacing": 0
        },
        "dayNumber": {
          "fontSize": 18,
          "fontWeight": "600",
          "color": "#FFFFFF",
          "letterSpacing": 0
        },
        "dayLabel": {
          "fontSize": 12,
          "fontWeight": "500",
          "color": "#FFFFFF",
          "letterSpacing": 0.5
        },
        "completionStatus": {
          "fontSize": 12,
          "fontWeight": "600",
          "color": "#FFFFFF",
          "letterSpacing": 0.5
        }
      }
    },

    "spacing": {
      "micro": 4,
      "small": 8,
      "medium": 16,
      "large": 24,
      "xlarge": 32,
      "xxlarge": 48
    },

    "borderRadius": {
      "small": 8,
      "medium": 12,
      "large": 16,
      "xlarge": 20,
      "circle": 50
    },

    "shadows": {
      "card": {
        "elevation": 2,
        "color": "rgba(0, 0, 0, 0.1)",
        "offset": { "x": 0, "y": 2 },
        "blur": 8,
        "spread": 0
      },
      "button": {
        "elevation": 1,
        "color": "rgba(0, 0, 0, 0.05)",
        "offset": { "x": 0, "y": 1 },
        "blur": 3,
        "spread": 0
      }
    },

    "components": {
      "header": {
        "structure": "User avatar + greeting text + notification bell",
        "layout": "horizontal flex with space-between alignment",
        "padding": { "horizontal": 24, "vertical": 16 },
        "backgroundColor": "#FFFFFF",
        "avatar": {
          "size": 48,
          "borderRadius": 24,
          "borderWidth": 0
        },
        "notificationBell": {
          "size": 40,
          "backgroundColor": "#FFFFFF",
          "borderRadius": 20,
          "borderWidth": 1,
          "borderColor": "#E0E0E0",
          "iconSize": 20,
          "iconColor": "#000000"
        }
      },

      "streakCard": {
        "structure": "Flame icon + streak number + motivational text",
        "backgroundColor": "#FFE5E5",
        "borderRadius": 20,
        "padding": { "horizontal": 24, "vertical": 20 },
        "margin": { "horizontal": 24, "vertical": 16 },
        "flameIcon": {
          "size": 32,
          "color": "#FF6B35"
        },
        "layout": "horizontal flex with center alignment"
      },

      "dateTimeline": {
        "structure": "Horizontal scrollable date pills",
        "layout": "horizontal scroll view",
        "padding": { "horizontal": 24, "vertical": 8 },
        "datePill": {
          "width": 60,
          "height": 80,
          "borderRadius": 30,
          "margin": { "horizontal": 6 },
          "states": {
            "today": {
              "backgroundColor": "#000000",
              "textColor": "#FFFFFF"
            },
            "completed": {
              "backgroundColor": "#FF6B35",
              "borderWidth": 2,
              "borderColor": "#FF6B35",
              "textColor": "#FFFFFF"
            },
            "default": {
              "backgroundColor": "#FFFFFF",
              "borderWidth": 1,
              "borderColor": "#E0E0E0",
              "textColor": "#000000"
            }
          }
        }
      },

      "habitCard": {
        "structure": "Icon + Title + Streak + Progress Grid + Time + Toggle Button",
        "borderRadius": 20,
        "padding": { "horizontal": 20, "vertical": 16 },
        "margin": { "horizontal": 24, "vertical": 8 },
        "minHeight": 200,
        "backgroundColors": {
          "readBook": "#E3F2FD",
          "programming": "#E0F2F1",
          "exercise": "#FFF9C4",
          "default": "#F5F5F5"
        },
        
        "habitIcon": {
          "size": 40,
          "backgroundColor": "#000000",
          "borderRadius": 20,
          "iconSize": 20,
          "iconColor": "#FFFFFF"
        },

        "progressGrid": {
          "structure": "7x10 dot matrix (70 dots total)",
          "dotSize": 12,
          "dotSpacing": 4,
          "rows": 10,
          "columns": 7,
          "dotStates": {
            "completed": {
              "backgroundColor": "#000000",
              "borderRadius": 6
            },
            "missed": {
              "backgroundColor": "#666666",
              "borderRadius": 6
            },
            "future": {
              "backgroundColor": "rgba(255, 255, 255, 0.7)",
              "borderRadius": 6
            }
          }
        },

        "toggleButton": {
          "size": 48,
          "borderRadius": 24,
          "states": {
            "completed": {
              "backgroundColor": "#000000",
              "iconColor": "#FFFFFF",
              "icon": "checkmark"
            },
            "uncompleted": {
              "backgroundColor": "#666666",
              "iconColor": "#FFFFFF",
              "icon": "checkmark"
            }
          }
        },

        "celebrationOverlay": {
          "trigger": "habit completion toggle",
          "animation": "fade in with scale",
          "duration": 1500,
          "content": "Confetti or success animation",
          "backgroundColor": "rgba(76, 175, 80, 0.1)"
        }
      },

      "bottomNavigation": {
        "structure": "Home + Add + Statistics buttons",
        "backgroundColor": "#000000",
        "borderRadius": 25,
        "height": 70,
        "margin": { "horizontal": 24, "bottom": 24 },
        "padding": { "horizontal": 20, "vertical": 10 },
        
        "buttons": {
          "home": {
            "icon": "house",
            "size": 24,
            "color": "#FFFFFF"
          },
          "add": {
            "icon": "plus",
            "size": 28,
            "color": "#000000",
            "backgroundColor": "#FFFFFF",
            "borderRadius": 20,
            "padding": 12
          },
          "stats": {
            "icon": "chart",
            "size": 24,
            "color": "#FFFFFF"
          }
        }
      }
    },

    "animations": {
      "habitCompletion": {
        "type": "celebration",
        "duration": 1500,
        "easing": "easeOutBack",
        "properties": ["scale", "opacity", "rotation"]
      },
      "cardAppear": {
        "type": "slideUp",
        "duration": 300,
        "easing": "easeOut",
        "stagger": 100
      },
      "streakUpdate": {
        "type": "bounce",
        "duration": 600,
        "easing": "easeOutBounce"
      }
    },

    "interactions": {
      "habitToggle": {
        "feedback": "haptic + visual animation",
        "stateChange": "immediate",
        "celebration": "conditional on completion"
      },
      "cardTap": {
        "feedback": "subtle scale animation",
        "ripple": false
      },
      "scrolling": {
        "physics": "bouncing",
        "indicators": false
      }
    },

    "layoutPrinciples": {
      "spacing": "Consistent 24px horizontal margins throughout",
      "cardLayout": "Full-width cards with rounded corners",
      "verticalRhythm": "8px base unit for all vertical spacing",
      "hierarchy": "Clear visual hierarchy with size, weight, and color",
      "colorCoding": "Each habit type has distinct background color",
      "progressVisualization": "Dot matrix for long-term progress tracking"
    },

    "designPatterns": {
      "gamification": {
        "streakTracking": "Prominent flame icon with day counter",
        "progressVisualization": "Visual dot matrix calendar",
        "celebration": "Completion animations and overlays",
        "motivationalMessaging": "Encouraging text and progress indicators"
      },
      "accessibility": {
        "colorContrast": "High contrast for text and interactive elements",
        "touchTargets": "Minimum 44px touch targets",
        "hapticFeedback": "Tactile feedback for important actions"
      }
    },

    "contentGuidelines": {
      "habitNames": "Clear, action-oriented titles",
      "timeIndicators": "Format: 'HH.MM Unit Coming!' or completion status",
      "streakCounting": "Positive reinforcement language",
      "celebrations": "Contextual success messaging"
    }
  }
}